# Production Environment Configuration for Sound Cistern
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgres://username:password@hostname:5432/sound_cistern_production?sslmode=require

# Soundcloud API Configuration
# Get these from https://developers.soundcloud.com/
SOUNDCLOUD_CLIENT_ID=your_production_client_id
SOUNDCLOUD_CLIENT_SECRET=your_production_client_secret
SOUNDCLOUD_REDIRECT_URI=https://your-domain.com/auth/callback

# Application Environment
GO_ENV=production

# Logging
LOG_LEVEL=info

# Session Configuration
SESSION_SECRET=your-secure-session-secret-here

# Optional: Custom host/port
# HOST=0.0.0.0
# PORT=3000